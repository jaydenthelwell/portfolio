<div class="container-beach">
  <%= render 'shared/beachnavbar' %>
  <div class="background">
    <%= image_tag("beach_background.png", alt: "Beach", id: "background-video") %>
    <%= image_tag("hut.png", alt: "Beach Hut", class: "beach-hut") %>
    <div>
      <%= link_to("about") do %>
        <%= image_tag("beach_hut_door_open.png", alt: "Beach Hut", id: "beach_hut_door", class: "d-none") %>
      <% end %>
    </div>
    <div>
      <%= image_tag("sunset_cloud_1.svg", alt: "Cloud", class: "sunset-cloud-1") %>
    </div>
    <div>
      <%= image_tag("sunset_cloud_2.svg", alt: "Cloud", class: "sunset-cloud-2") %>
    </div>
    <div>
      <%= link_to("projects") do %>
        <%= image_tag("boat.png", alt: "Boat To Island", class: "boat") %>
      <% end %>
    </div>
    <div>
      <%= image_tag("beach_ball.svg", alt: "Beach Ball", class: "beach_ball") %>
    </div>
    <div>
      <%= image_tag("boat_in_distance.svg", alt: "Boat in the distance", class: "background_boat") %>
    </div>
    <div>
      <%= image_tag("beach_sign.png", alt: "Sign Post", class: "sign-post d-none") %>
    </div>
    <div class="post-container">
      <%= image_tag("option_sign.png", alt: "Sign Post", class: "sign-post options") %>
      <%= image_tag("note.png", alt: "Note", class: "post-it-beach d-none") %>
    </div>
    <div class="post-it-container d-none">
      <div class="parchment">
      <%= image_tag("navigation_note.png", alt: "Post it", class: "parchment") %>
        <div class="popup-content-beach">
          <%= image_tag("cross.png", class: "close-popup-beach", id: "close-popup")%>
        </div>
      </div>
    </div>
  </div>
</div>
